<%= simple_form_for(@design) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.association :user %>
    <%= f.input :version %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
